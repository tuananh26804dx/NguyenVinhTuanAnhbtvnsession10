#include <stdio.h>

int main() {
    int arr[] = {1,4,2,5,2,3,5,6,2,5,6};
    int n = sizeof(arr) / sizeof(arr[0]);
    int k, temp;

    // Sắp xếp chọn trực tiếp (Selection Sort) tăng dần
    for (int i = 0; i < n - 1; i++) {
        k = i; // giả sử phần tử nhỏ nhất nằm ở vị trí i
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[k]) {
                k = j; // cập nhật vị trí phần tử nhỏ nhất
            }
        }
        // hoán đổi arr[i] và arr[k]
        if (k != i) {
            temp = arr[i];
            arr[i] = arr[k];
            arr[k] = temp;
        }
    }

    printf("\nMang sap xep tang dan bang thuat toan chon truc tiep:\n");
    for (int i = 0; i < n; i++) {
        printf("%d  ", arr[i]);
    }

    return 0;
}
