#include <stdio.h>

int main() {
    int arr[] = {1,4,2,5,2,3,5,6,2,5,6};
    int n = sizeof(arr) / sizeof(arr[0]);
    int temp;

    // Sắp xếp nổi bọt tăng dần
    for (int i = 0; i < n - 1; i++) {
        for (int j = 0; j < n - 1 - i; j++) {
            if (arr[j] > arr[j + 1]) {
                temp = arr[j];
                arr[j] = arr[j + 1];
                arr[j + 1] = temp;
            }
        }
    }

    printf("\nMang sap xep tang dan bang thuat toan noi bot:\n");
    for (int i = 0; i < n; i++) {
        printf("%d  ", arr[i]);
    }

    return 0;
}
